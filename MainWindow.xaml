<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertToText"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnRunOCR" Content="Metni Ayıkla" HorizontalAlignment="Left" Height="30" Margin="599,49,0,0" VerticalAlignment="Top" Width="171" Click="btnRunOCR_Click"/>
        <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Height="25" Margin="599,94,0,0" VerticalAlignment="Top" Width="171"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="281" Margin="599,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <ComboBox x:Name="cbxLanguage" HorizontalAlignment="Left" Height="25" Margin="599,10,0,0" VerticalAlignment="Top" Width="171"/>
        <Image x:Name="imageBox" Stretch="None" HorizontalAlignment="Left" Height="350" Margin="22,10,0,0" VerticalAlignment="Top" Width="530"/>
        <Button x:Name="btnPasteClipboard" Content="Clipboarddan Yapıştır" HorizontalAlignment="Left" Height="30" Margin="22,375,0,0" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.216,0.282"/>
        <Button x:Name="btnSelectFromFile" Content="Dosyadan Resim Seç" HorizontalAlignment="Left" Height="30" Margin="353,375,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
